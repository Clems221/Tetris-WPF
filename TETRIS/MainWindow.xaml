            <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Nouvelle partie (F2)" Foreground="#FF4B4B4B"/>
            <TextBlock x:Name="textBlock3" TextWrapping="Wrap" Text="Pause (F3)" Foreground="#FF4B4B4B"/>
            <TextBlock x:Name="textBlock4" TextWrapping="Wrap" Text="Quitter (Échap)" Foreground="#FF4B4B4B"/>
